@import "nib"

* 
	box-sizing: border-box
	
html
	margin: 0
	padding: 0
	padding-top: 50px
	background: #EEEEEE
	font-size: 17px
	height: 100%
	overflow: auto
	font-family: Arial

body
	margin: 0
	padding: 0
	font-size: 17px

a:hover, a:link, a:visited, a:active a:focus
	color: inherit 
	text-decoration: none
/************************ card ****************************************/
ul
	margin: 0
	padding: 0
	list-style: none

.task
	margin: 0 auto
	
	&-header
		color: #fff
		text-shadow: 4px 3px 4px rgba(0, 0, 0, .6)
		padding: 0 10px
		position: relative
		display: flex
		align-items: center
		justify-content: space-between
		&-bg
			z-index: -1
			margin: 0
			position: absolute
			top: 0
			left: 0
			right: 0
			bottom: 0
			background-image: url('../img/bg-header.jpg')
			background-attachment: fixed;
			background-position: center
			background-size: cover
			-webkit-filter: blur(2px)
			-moz-filter: blur(2px)
			-o-filter: blur(2px)
			-ms-filter: blur(2px)
			filter: blur(2px)		
		&-logo
			background-image: url('../img/task.png')
			background-size: 100% 100%
			width: 45px
			height: 45px
			padding: 0
			margin: 0
			flex-shrink: 0
			display: inline-block
			
		text-align: center
		h2
				padding 0 10px
				
			
	&-info
		padding 5px 12px
		h3
		p
		ul
			list-style: inside circle
			margin: 1em 0
	
	&-btns
		text-align: center
		display: flex
		margin: 1em 0
		
.title
	text-align: center
.titleSection
	display: block
	background: #22A7F0
	position: fixed
	z-index: 100
	color: #fff
	top: 0
	left: 0
	right: 0
	height: 50px
	line-height: 50px
	padding: 0
	text-align: center
	
.edit-mode
	span
		width: 200px
		display: inline-block
	textarea
		min-width: 100%
		max-width: 100%
		min-height: 5em
	li
		margin 1em 0
	
		
.btn
	margin: 0 auto
	text-align: center
	color: #fff
	padding: 4px 12px
	cursor: pointer
	align-items: center
	font-size: 1em
	
	
.comentario
	margin: 1em 0		
.agregar
	display: block
	background: #22A7F0
	position: fixed
	z-index: 100
	top: 0
	left: 0
	right: 0
	height: 50px
	line-height: 50px
	padding: 0
	&:hover
		background: #1C8DCB
.edit
	background: #26A65B
	width:100%
	border: 1px solid #fff
	&:hover
		background: #1A8C49
.add
	background: #22A7F0
	display: inline-block
	border: 1px solid #fff
	&:hover
		background: #1C8DCB
.delete
	background: #F71C2C
	border: 1px solid #C1C3C8
	display: inline-block
	&:hover
		background: #DF2230